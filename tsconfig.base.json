  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],

    "paths": {
      "@library/lib": ["projects/lib/src/lib/lib.module"],
      "@library/lib/models": ["projects/lib/src/lib/models/index"]
    }
  }
}
